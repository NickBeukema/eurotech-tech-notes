<p id="notice"><%= notice %></p>

<h1>Listing Repair Orders</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Recommendations</th>
      <th>Maintenance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repair_orders.each do |repair_order| %>
      <tr>
        <td><%= repair_order.number %></td>
        <td><%= repair_order.recommendations %></td>
        <td><%= repair_order.maintenance %></td>
        <td><%= link_to 'Show', repair_order %></td>
        <td><%= link_to 'Edit', edit_repair_order_path(repair_order) %></td>
        <td><%= link_to 'Destroy', repair_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

